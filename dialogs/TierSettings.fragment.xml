<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  >
  <Dialog
    title="Tier Settings"
    type="Standard" >
    
    <VBox>
    <Label text="Tier" required="true"></Label>
    <Input
        type="Text"
        placeholder="Tier"
        enabled="true"
        editable="true"
      />    
    <Label text="Tier description" required="true"></Label>
    <Input
        type="Text"
        placeholder="Tier Description"
        enabled="true"
        editable="true"
      />    
    </VBox>
	  <beginButton>
	      <Button text="Ok" press="logonClicked" width="100%"/>
	  </beginButton>
	  <endButton>
	      <Button text="Cancel" press="logonClicked" width="100%"/>
	  </endButton>
    
  </Dialog>
</core:FragmentDefinition>